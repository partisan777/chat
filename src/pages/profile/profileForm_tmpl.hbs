 <div class="profile-form" id="profile-form"> 
    <div class="profile-sidebar" id="profile-sidebar">
        {{#if profileExit }} {{{ profileExit }}} {{/if}}
    </div>
    <div class="profile-subform" id="profile-subform">
        <div class="profile-avatar" id="profile-avatar">
            <img src="#" alt="Avatar" />
        </div>
        <form class="form-input" id="profile-form-input">
            <h2>Данные пользователя</h2>
            {{#if prFormEmail }}  {{{ prFormEmail }}} {{/if}}
            {{#if prFormLogin }} {{{ prFormLogin }}} {{/if}}
            {{#if prFormFirstName }} {{{ prFormFirstName }}} {{/if}}
            {{#if prFormSecondName }} {{{  prFormSecondName }}} {{/if}}
            {{#if prFormDisplayName }} {{{ prFormDisplayName }}} {{/if}}
            {{#if prFormPhone }} {{{ prFormPhone }}} {{/if}}
            {{#if changeAvatar }}  {{{ changeAvatar }}} {{/if}}
            {{#if profileChangeData }} {{{ profileChangeData }}} {{/if}}
            {{#if profileChangePassword }} {{{ profileChangePassword }}} {{/if}}
            {{#if profileLogout }} {{{ profileLogout }}} {{/if}}
        </form>
       
    </div> 
    {{#if changePasswordFormPage }} {{{ changePasswordFormPage }}} {{/if}}            
    {{#if changeAvatarFormPage }} {{{ changeAvatarFormPage }}} {{/if}}
</div>

            
            
            
            
            
            
            